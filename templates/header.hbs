<style>
  .header {
    background: linear-gradient(0deg, #E9EBED 1px, #FFFFFF 1px);
    box-shadow: none;
  }
</style>

<header class="header">
  <div class="header-logo-wrapper">
    <div class="logo">
      {{#link 'help_center'}}
      <img src="{{settings.logo}}" alt="{{t 'home_page' name=help_center.name}}">
      {{/link}}
    </div>

    <div class="header-logo-title">
      {{#link 'help_center'}}
        Support
      {{/link}}
    </div>
  </div>

  <div class="nav-wrapper">
      {{search submit=false instant=settings.instant_search class="bar-search " placeholder=""}}
    <span class="icon-menu" tabindex="0" role="button" aria-controls="user-nav" aria-expanded="false"
      aria-label="{{t 'toggle_navigation'}}"></span>
    <nav class="user-nav" id="user-nav">
      {{link 'community' class='community-link'}}
    </nav>
    {{user_info}}
  </div>
</header>

<script>
  var barSearch = document.querySelector('.bar-search');
  var barSearchInput = barSearch.lastElementChild;

  barSearch.addEventListener('click', function(e) {
    e.stopPropagation();
    barSearchInput.focus();
  });
</script>